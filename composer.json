{
    "name": "nswdpc/silverstripe-taggable-notifications",
    "description": "Add tagging to notifications going out of a Silverstripe project",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "nsw",
        "tagging",
        "tags",
        "notifications"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "James Ellis",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "NSWDPC\\Messaging\\Taggable\\": [
                "src/Email/",
                "src/Extensions/",
                "src/Models/",
                "src/Traits/"
            ],
            "NSWDPC\\Messaging\\Taggable\\Tests\\": [
                "tests/"
            ]
        }
    },
    "require": {
        "silverstripe/framework" : "^5",
        "silverstripe/tagfield" : "^3",
        "silverstripe/taxonomy" : "^3"
    },
    "suggest" : {
        "silverstripe/userforms" : "Install this module to get tagging of notifications from a user form"
    },
    "require-dev": {
        "cambis/silverstripe-rector": "^1",
        "phpunit/phpunit": "^9.5",
        "cambis/silverstan": "^1",
        "nswdpc/ci-files": "dev-v-3"
    },
    "repositories": [
        {
        "type": "git",
        "url": "https://github.com/nswdpc/ci-files.git"
        }
    ],
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "php-http/discovery": true,
            "silverstripe/vendor-plugin": true,
            "silverstripe/recipe-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
